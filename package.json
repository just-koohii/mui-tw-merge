{
  "name": "mui-tw-merge",
  "description": "Utility functions to merge MUI's theme into TailwindCSS",
  "author": "just-koohii",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just-koohii/mui-tw-merge.git"
  },
  "keywords": [
    "react",
    "mui",
    "material-ui",
    "material design",
    "tailwindcss"
  ],
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint src __tests__ --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "bump-version": "git pull && npm version $VERSION && git push --tags && git push",
    "patch": "VERSION=patch npm run deploy",
    "minor": "VERSION=minor npm run deploy",
    "major": "VERSION=major npm run deploy"
  },
  "devDependencies": {
    "@emotion/styled": "^11.11.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-ristretto": "^1.0.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "peerDependencies": {
    "@mui/material": "*",
    "tailwindcss": "*"
  }
}
